type Query {
  user: User
}

scalar Upload

type Mutation {
  createAccount(
    username: String!
    email: String!
    password: String!
  ): AuthPayload
  login(email: String!, password: String!): AuthPayload!
}

type AuthPayload {
  token: String!
  user: User!
}

type DeletePictureResponse {
  success: Boolean!
  message: String!
}
